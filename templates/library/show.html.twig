{% extends 'base.html.twig' %}

{% block title %}Library{% endblock %}

{% block body %}
    <div class="expander">
        <div class="book-container">
            <h1>About the book</h1>
            <h2>{{book.title}}</h2>
            <h3>by {{book.author}}</h3>
            <h4>ISBN: {{book.isbn}}</h4>
            {% if book.img != "" %}
                <img class="book-img block" src="{{book.img}}" alt="en bild">
            {% endif %}
            <div>
                <a class="button" href="{{ path('book_update_get', {'bookId':book.id})}}">Update</a>
                <a class="button" href="{{ path('book_delete_get', {'bookId':book.id})}}">Delete</a>
            </div>
        </div>
    </div>
{% endblock %}

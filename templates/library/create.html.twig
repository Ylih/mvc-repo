{% extends 'base.html.twig' %}

{% block title %}Library!{% endblock %}

{% block body %}
    <h1>Add a book</h1>
    <form method="post" action="{{ path('book_create') }}">
        <label class="input-label" for="title">Title</label>
        <input type="text" class="input" minlength="1" maxlength="255" name="title">
        <label class="input-label" for="author">Author</label>
        <input type="text" class="input" minlength="1" maxlength="255" name="author">
        <label class="input-label" for="isbn">ISBN</label>
        <input type="number" class="input" name="isbn">
        <label class="input-label" for="image">Image URL</label>
        <input type="text" class="input" maxlength="255" name="image">
        <input type="submit" class="button" name="send" value="Add book">
    </form>

{% endblock %}
